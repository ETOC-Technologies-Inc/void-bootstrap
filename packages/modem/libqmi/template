# Template file for 'libqmi'
pkgname=libqmi
version=1.33.3+git20221218
revision=1
_commit=871a073c5374d54a6c6d4e5c297c2ce18af37b39
build_style=meson
build_helper="gir qemu"
hostmakedepends="pkg-config help2man"
makedepends="glib-devel libgudev-devel bash-completion libmbim-devel libqrtr-glib-devel"
short_desc="QMI modem protocol helper library (git ${_commit:0:7})"
maintainer="Jami Kettunen <jami.kettunen@somainline.org>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://www.freedesktop.org/wiki/Software/libqmi/"
changelog="https://gitlab.freedesktop.org/mobile-broadband/libqmi/-/raw/main/NEWS"
distfiles="https://gitlab.freedesktop.org/mobile-broadband/libqmi/-/archive/${_commit}.tar.gz"
checksum=5213631ea37edd07a0d911d062f7856a74757bf925efb3d5509a6feaa896c3a5

build_options="gir"
build_options_default="gir"

libqmi-devel_package() {
	depends="${makedepends} ${sourcepkg}-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
		fi
	}
}

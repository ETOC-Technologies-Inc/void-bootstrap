# Template file for 'ModemManager'
pkgname=ModemManager
version=1.21.2+git20221218
revision=1
_commit=2a1851536c3c096ab4e3f26ebe6671b946e665be
build_style=meson
build_helper="gir"
configure_args="-Dsystemd_suspend_resume=false -Dsystemd_journal=false
 -Dsystemdsystemunitdir=no -Dpowerd_suspend_resume=true -Dpolkit=permissive
 -Dudevdir=/usr/lib/udev $(vopt_bool gir vapi)"
hostmakedepends="pkg-config glib-devel libxslt-devel $(vopt_if gir vala-devel)
 gettext-devel gettext-devel-tools polkit"
makedepends="libglib-devel libgudev-devel polkit-devel libqmi-devel libmbim-devel"
depends="hicolor-icon-theme ppp"
checkdepends="dbus"
short_desc="Mobile broadband modem management service (git ${_commit:0:7})"
maintainer="Jami Kettunen <jami.kettunen@somainline.org>"
license="GPL-2.0-or-later"
homepage="https://www.freedesktop.org/wiki/Software/ModemManager/"
changelog="https://gitlab.freedesktop.org/mobile-broadband/ModemManager/-/raw/main/NEWS"
distfiles="https://gitlab.freedesktop.org/mobile-broadband/ModemManager/-/archive/${_commit}.tar.gz"
checksum=14dd4b6bd9c6229e7d529ce974170026ca09f7219ed04fdd10d09a330188b7e1

build_options="gir"
build_options_default="gir"

ModemManager-devel_package() {
	depends="libmm-glib>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
			vmove usr/share/vala
		fi
	}
}

libmm-glib_package() {
	short_desc+=" - GLib library"
	pkg_install() {
		vmove "usr/lib/libmm-glib.so.*"
		if [ "$build_option_gir" ]; then
			vmove usr/lib/girepository-1.0
		fi
	}
}

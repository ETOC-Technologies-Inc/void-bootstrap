pre_configure() {
	cp -r ../libgd-${_githash_libgd}/. subprojects/libgd

	if [ "$CROSS_BUILD" ]; then
		vsed -i src/purple/meson.build -e "s/purple_plugdir =.*/purple_plugdir = '\/usr\/${XBPS_CROSS_TRIPLET}\/usr\/lib\/purple-2'/"
	fi
}

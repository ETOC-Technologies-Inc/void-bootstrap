# Template file for 'libphonenumber'
pkgname=libphonenumber
version=8.12.39
revision=1
build_style=cmake
configure_args="-DREGENERATE_METADATA=OFF"
makedepends="boost-devel gtest-devel protobuf-devel icu-devel"
hostmakedepends="pkg-config protobuf"
short_desc="Library for parsing, formatting, and validating international phone numbers"
maintainer="Jami Kettunen <jami.kettunen@somainline.org>"
license="Apache-2.0"
homepage="https://github.com/google/libphonenumber"
distfiles="${homepage}/archive/refs/tags/v${version}.tar.gz"
build_wrksrc="cpp"
checksum=ff16330f130917e42bc0b1a7efe5e4fba46633bfa62e35268acec855e17e385c
#nocross="cross build fails due to generate_geocoding_data compiling for target instead of host!"
# HACK: figure out cross-compiling instead of using qemu!
if [ ${CROSS_BUILD} ]; then
	build_helper=qemu
fi

post_install() {
	vlicense LICENSE
}

libphonenumber-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
